---
import LetterGlitch from "../React/LetterGlitch.tsx";
import LogoWall from "../components/logoWall.astro";
import SkillsList from "../React/SkillsList.tsx";
import TechStack from "../React/TechStack.tsx";
import BlogArticles from "../React/BlogArticles.tsx";
import AchievementsGallery from "../React/AchievementsGallery.tsx";
import NowSection from "../React/NowSection.tsx";
---

<section class="text-[var(--white)] mt-12 md:mt-0 relative overflow-hidden" id="home">
  <!-- Elementos de fondo con efecto parallax -->
  <div class="parallax-bg-home">
    <div class="parallax-shape-home parallax-shape-home-1" data-speed="0.2"></div>
    <div class="parallax-shape-home parallax-shape-home-2" data-speed="0.4"></div>
    <div class="parallax-circle-home parallax-circle-home-1" data-speed="0.5"></div>
    <div class="parallax-dots parallax-dots-1" data-speed="0.3"></div>
    <div class="parallax-dots parallax-dots-2" data-speed="0.45"></div>
  </div>

  <div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14 relative z-10">
    <div class="text-left space-y-4">

      <div class="relative">
        <div class="w-52 h-52 md:w-60 md:h-60 rounded-full border-4 border-[var(--sec)] shadow-xl profile-roll-in">
          <img 
            src="/perfil.png" 
            alt="Kenss Hilario Castro"
            class="w-full h-full object-cover rounded-full"
          />
        </div>
      </div>

      <div class="content-fade-in">
        <p class="text-lg md:text-xl text-[var(--white-icon)] shiny-white">
          Hola, Soy Kenss Hilario
        </p>
      </div>

      <div class="flex flex-col lg:flex-row lg:items-center gap-6 content-fade-in">
        <h1 class="text-[var(--white)] text-5xl md:text-6xl font-semibold leading-tight">
          Desarrollador <br> de Software JR
        </h1>
        <p class="text-md md:text-lg text-[var(--white-icon)] max-w-xl">
          Bachiller de la carrera de Ingeniería de Sistemas e Informática con experiencia en desarrollo de software, 
          tecnologías web y aplicaciones móviles. Conocimiento en metodologías ágiles (<strong>Scrum</strong>), bases de datos, 
          análisis de datos y gestión de proyectos. Capacidad para 
          <span class="text-[var(--sec)] shiny-sec font-semibold">diseñar</span>,
          <span class="text-[var(--sec)] shiny-sec font-semibold">desarrollar</span> e 
          <span class="text-[var(--sec)] shiny-sec font-semibold">implementar</span> soluciones
          tecnológicas eficientes y escalables, con un enfoque en la optimización de procesos y mejora continua.
        </p>
      </div>

      <div class="content-fade-in">
        <p class="text-lg md:text-xl text-[var(--white-icon)] shiny-white">
          Puedes visitar mi:
        </p>
      </div>

      <div class="flex justify-start gap-2 pt-3 md:pt-0 content-fade-in">
        <a
          target="_blank"
          href="https://github.com/Kenss12345"
          aria-label="GitHub"
          class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="size-8"
          >
            <path
              d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
            ></path>
          </svg>
        </a>
        <a
          target="_blank"
          href="https://linkedin.com/in/kenss-lin-kadú-hilario-castro-259a18227"
          aria-label="LinkedIn"
          class="text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="size-8"
          >
            <path
              d="M18.3362 18.339H15.6707V14.1622C15.6707 13.1662 15.6505 11.8845 14.2817 11.8845C12.892 11.8845 12.6797 12.9683 12.6797 14.0887V18.339H10.0142V9.75H12.5747V10.9207H12.6092C12.967 10.2457 13.837 9.53325 15.1367 9.53325C17.8375 9.53325 18.337 11.3108 18.337 13.6245V18.339H18.3362ZM7.00373 8.57475C6.14573 8.57475 5.45648 7.88025 5.45648 7.026C5.45648 6.1725 6.14648 5.47875 7.00373 5.47875C7.85873 5.47875 8.55173 6.1725 8.55173 7.026C8.55173 7.88025 7.85798 8.57475 7.00373 8.57475ZM8.34023 18.339H5.66723V9.75H8.34023V18.339ZM19.6697 3H4.32923C3.59498 3 3.00098 3.5805 3.00098 4.29675V19.7033C3.00098 20.4202 3.59498 21 4.32923 21H19.6675C20.401 21 21.001 20.4202 21.001 19.7033V4.29675C21.001 3.5805 20.401 3 19.6675 3H19.6697Z"
            ></path>
          </svg>
        </a>
        
      </div>
    </div>

    <div class="content-fade-in">
      <LogoWall />
    </div>

    <div class="flex flex-col lg:flex-row items-center gap-8 content-fade-in">
      <SkillsList client:load />
      <div
        class="flex justify-center md:w-full md:h-[292px] size-[290px] pt-3 md:pt-9 md:ml-16"
      >
        <LetterGlitch
          client:load
          glitchColors={["#5e4491", "#A476FF", "#241a38"]}
          glitchSpeed={33}
          centerVignette={false}
          outerVignette={true}
          smooth={true}
        />
      </div>
    </div>

    <!-- Sección "Ahora" (Now Page) -->
    <div class="content-fade-in pt-12">
      <NowSection client:load />
    </div>

    <!-- Stack Tecnológico Interactivo -->
    <div class="content-fade-in pt-12" id="stack">
      <TechStack client:load />
    </div>

    <!-- Blog & Artículos -->
    <div class="content-fade-in pt-12" id="blog">
      <BlogArticles client:load />
    </div>

    <!-- Galería de Logros -->
    <div class="content-fade-in pt-12" id="certificaciones">
      <AchievementsGallery client:load />
    </div>
  </div>
</section>

<style>
  /* Animación de rodar desde la izquierda */
  @keyframes rollIn {
    0% {
      transform: translateX(-100vw) rotate(-720deg);
      opacity: 0;
    }
    100% {
      transform: translateX(0) rotate(0deg);
      opacity: 1;
    }
  }

  /* Animación de aparición con desvanecimiento */
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Aplicar animación a la foto de perfil */
  .profile-roll-in {
    animation: rollIn 1.5s cubic-bezier(0.34, 1.56, 0.64, 1) forwards;
  }

  /* Aplicar animación al contenido (aparece después de la foto) */
  .content-fade-in {
    opacity: 0;
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: 1.6s;
  }

  /* Evitar overflow horizontal durante la animación */
  #home {
    overflow-x: hidden;
  }

  /* ===== EFECTOS PARALLAX EN HOME ===== */
  .parallax-bg-home {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: 0;
  }

  /* Formas geométricas para home */
  .parallax-shape-home {
    position: absolute;
    border-radius: 50% 50% 50% 70% / 50% 50% 70% 60%;
    opacity: 0.04;
    background: linear-gradient(135deg, var(--sec), #b48eff);
    filter: blur(50px);
    will-change: transform;
  }

  .parallax-shape-home-1 {
    width: 500px;
    height: 500px;
    top: -10%;
    right: 5%;
    animation: float-slow 25s ease-in-out infinite;
  }

  .parallax-shape-home-2 {
    width: 350px;
    height: 350px;
    bottom: 15%;
    left: -5%;
    animation: float-slow 20s ease-in-out infinite reverse;
  }

  /* Círculo decorativo home */
  .parallax-circle-home {
    position: absolute;
    border-radius: 50%;
    border: 3px solid var(--sec);
    opacity: 0.06;
    will-change: transform;
  }

  .parallax-circle-home-1 {
    width: 300px;
    height: 300px;
    top: 50%;
    left: -10%;
    animation: rotate-slow 40s linear infinite;
  }

  /* Puntos decorativos */
  .parallax-dots {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--sec);
    border-radius: 50%;
    opacity: 0.2;
    will-change: transform;
  }

  .parallax-dots::before,
  .parallax-dots::after {
    content: '';
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--sec);
    border-radius: 50%;
  }

  .parallax-dots::before {
    top: 30px;
    left: 40px;
  }

  .parallax-dots::after {
    top: 60px;
    left: -20px;
  }

  .parallax-dots-1 {
    top: 20%;
    right: 20%;
    animation: twinkle 3s ease-in-out infinite;
  }

  .parallax-dots-2 {
    bottom: 25%;
    left: 15%;
    animation: twinkle 4s ease-in-out infinite 1s;
  }

  /* Animaciones para home */
  @keyframes float-slow {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(20px, -20px) rotate(3deg);
    }
    66% {
      transform: translate(-15px, 15px) rotate(-3deg);
    }
  }

  @keyframes rotate-slow {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.2;
      transform: scale(1);
    }
    50% {
      opacity: 0.4;
      transform: scale(1.5);
    }
  }

  /* Ocultar en móviles */
  @media (max-width: 768px) {
    .parallax-bg-home {
      display: none;
    }
  }
</style>

