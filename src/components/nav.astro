      <!-- Theme Toggle Button -->
      <button
        id="theme-toggle"
        class="md:ml-2 flex items-center justify-center w-10 h-10 rounded-full bg-[var(--card)] border border-[var(--white-icon-tr)] hover:border-[var(--sec)] transition-all duration-300"
        aria-label="Toggle theme"
      >
        <svg id="sun-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-[var(--white-icon)] transition-all duration-300">
