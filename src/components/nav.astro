<div class="flex justify-center w-full">
  <!-- Barra de progreso de scroll -->
  <div id="scroll-progress-bar" class="fixed top-0 left-0 h-1 bg-gradient-to-r from-[var(--sec)] via-[#c084ff] to-[var(--sec)] z-[101] transition-all duration-100" style="width: 0%"></div>
  
  <nav
    class="fixed flex left-0 right-0 z-[100] bg-[#1414149c] border border-1 border-[var(--white-icon-tr)] backdrop-blur-xl transition-all md:top-0 md:bottom-auto bottom-0 md:w-[36rem] rounded-t-2xl md:rounded-full md:mt-6 md:justify-self-center"
  >
    <div class="container mx-auto flex justify-between items-center p-3 px-6">
      <ul
        class="flex justify-between md:space-x-6 md:justify-center md:gap-12 gap-6"
      >
        {
          navItems.map((item) => (
            <li class="flex-1 md:flex-none">
              <a
                href={item.href}
                class="flex flex-col items-center gap-1 text-[var(--white-icon)] transition-colors text-xs md:text-base"
              >
                <span class="md:hidden flex items-center justify-center w-6 h-6">
                  <fragment set:html={item.icon} />
                </span>
                <span class="hidden md:inline-block">{item.label}</span>
                <span class="md:hidden">{item.label}</span>
              </a>
            </li>
          ))
        }
      </ul>
      
      <!-- Sound Toggle Button -->
      <button
        id="sound-toggle"
        class="ml-auto md:ml-2 flex items-center justify-center w-10 h-10 rounded-full bg-[var(--card)] border border-[var(--white-icon-tr)] hover:border-[var(--sec)] transition-all duration-300"
